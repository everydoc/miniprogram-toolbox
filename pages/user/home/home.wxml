      <view class="content">友情提示</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl" style="color:text-red">
      <text style="color:red">一天签到一次～请勿重复签到</text>
    </view>
  </view>
</view>