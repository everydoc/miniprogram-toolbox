<!--首页页面-->
<!-- 视图容器，视作div-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
  <view slot="backText">返回</view>
  <view slot="content">问卷中心</view>
</cu-custom>

<view class='homecontainer'>
  <!-- 表示问卷每一项，从左到右排列 -->
  <navigator class='item' wx:for="{{tableList}}" wx:key="index" wx:if="{{item.questionStatus == '1'}}" open-type="navigate" url="/pages/survey/detail/detail?questionId={{item.questionId}}">
    <!-- 左侧图片 -->
    <image class="images" wx:if="{{item.questionStatus == '1'}}" src="{{item.questionImg}}"></image>
    <!-- 右侧问卷信息 -->
    <view class="item-right" wx:if="{{item.questionStatus == '1'}}" data-questionId="{{item.questionId}}">
      <view class="item-title" wx:if="{{item.questionStatus == '1'}}">{{item.questionTitle}}</view>
      <view class="item-desc" wx:if="{{item.questionStatus == '1'}}">{{item.questionDesc}}</view>
      <view class="item-join" wx:if="{{item.questionStatus == '1'}}">参与人数:{{item.joinCount}}</view>
    </view>
  </navigator>
</view>